<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shoppingmall.mapper.MallMapper">

    <!-- 도서 목록 -->
    <select id="getBooksList" resultType="com.example.shoppingmall.dto.BooksDto">
        SELECT *
        FROM books;
    </select>

    <!-- 도서 목록 + 페이징 -->
    <select id="getPageBookList" resultType="com.example.shoppingmall.dto.BooksDto">
        SELECT *
        FROM Books;
    </select>

    <!-- 도서 상세 -->
    <select id="detailBook" resultType="com.example.shoppingmall.dto.BooksDto">
        SELECT *
        FROM books
        WHERE bookid = #{bookid};
    </select>
</mapper>